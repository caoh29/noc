{
  "name": "noc-app",
  "version": "1.0.0",
  "description": "noc app to check  logs for application",
  "keywords": [
    "noc",
    "cli",
    "tool"
  ],
  "license": "MIT",
  "author": "cronox20@gmail.com",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "dev": "node --experimental-strip-types ./src/index.ts",
    "dev:watch": "nodemon",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/src/index.js",
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix ",
    "docker:test:up": "docker compose -f docker-compose.test.yaml --env-file .env.test up -d",
    "docker:test:down": "docker compose -f docker-compose.test.yaml --env-file .env.test down",
    "test": "npm run docker:test:up && jest",
    "test:watch": "npm run docker:test:up && jest --watch",
    "test:coverage": "npm run docker:test:up && jest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.7.0",
    "@prisma/client": "^6.7.0",
    "cron": "^4.3.0",
    "dotenv": "^16.5.0",
    "mongoose": "^8.14.2",
    "nodemailer": "^7.0.2"
  }
}
